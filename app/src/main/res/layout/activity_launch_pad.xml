<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="120 BPM    00 : 00"
            android:id="@+id/textViewCounter"
            android:layout_gravity="center_vertical"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:id="@+id/button_rewind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_av_fast_rewind"
            android:onClick="RewindButtonClick"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />
        <ImageButton
            android:id="@+id/button_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_av_play_arrow"
            android:onClick="PlayButtonClick"
            android:layout_toEndOf="@id/button_rewind"
            android:layout_toRightOf="@+id/button_rewind"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/button_fast_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_av_fast_forward"
            android:onClick="FastForwardButtonClick"
            android:layout_toEndOf="@id/button_play"
            android:layout_toRightOf="@+id/button_play"
            android:layout_centerVertical="true" />
        </RelativeLayout>

