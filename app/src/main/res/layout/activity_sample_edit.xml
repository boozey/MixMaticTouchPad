<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/RelativeLayout"
    tools:context=".MainActivity">

    <com.nakedape.mixmaticlaunchpad.AudioSampleView
        android:id="@+id/spectralView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonPlay" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/buttonPlay"
        android:onClick="Play"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ + ]"
        android:id="@+id/buttonZoomIn"
        android:layout_alignTop="@+id/buttonPlay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="ZoomIn" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ - ]"
        android:id="@+id/buttonZoomOut"
        android:layout_toStartOf="@+id/buttonZoomIn"
        android:layout_toLeftOf="@id/buttonZoomIn"
        android:layout_alignTop="@+id/buttonZoomIn"
        android:onClick="ZoomOut" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/buttonSave"
        android:layout_below="@+id/spectralView"
        android:onClick="Save"
        android:layout_toRightOf="@+id/buttonPlay" />

</RelativeLayout>
